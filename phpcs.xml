<?xml version="1.0"?>
<ruleset>
    <file>src</file>
    <file>tests</file>

    <rule ref="PSR12"/>
    <rule ref="Generic.Files.LineLength.TooLong">
        <type>error</type>
    </rule>
    <rule ref="PSR1.Files.SideEffects.FoundWithSymbols">
        <exclude-pattern>./tests/*</exclude-pattern>
    </rule>
    <exclude-pattern>*/vendor/*</exclude-pattern>
</ruleset>
